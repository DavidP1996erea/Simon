<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="393dp">

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="425dp"
            android:orientation="horizontal">


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/parteVerde"
                android:name="com.example.simon.VerdeFragment"
                android:layout_width="196.5dp"
                android:layout_height="425dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/parteRoja"
                android:name="com.example.simon.RojoFragment"
                android:layout_width="196.5dp"
                android:layout_height="425dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="425dp"
            android:orientation="horizontal">


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/parteAmarilla"
                android:name="com.example.simon.AmarilloFragment"
                android:layout_width="196.5dp"
                android:layout_height="430dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/parteAzul"
                android:name="com.example.simon.AzulFragment"
                android:layout_width="196.5dp"
                android:layout_height="425dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>